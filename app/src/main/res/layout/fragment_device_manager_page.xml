<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tv_dev_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:text="智能测量仪："
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_no_rule_dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="暂无设备连接，请添加设备"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />
            <GridView
                android:layout_marginTop="5dp"
                android:id="@+id/gv_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_dev_name"
                android:numColumns="3"
                ></GridView>
            <TextView
                android:id="@+id/tv_dev_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:text="激光测距仪："
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_no_laser_dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="暂无设备连接，请添加设备"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />
            <GridView
                android:id="@+id/gv_laser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_dev_name"
                android:layout_marginTop="5dp"
                android:numColumns="3"
                ></GridView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_add_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@mipmap/btn_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加设备" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
