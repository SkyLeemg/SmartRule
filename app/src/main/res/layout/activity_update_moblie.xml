<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        android:id="@+id/include"
        layout="@layout/base_toolbar"/>

    <!--第一步-->
    <LinearLayout
        android:id="@+id/ll_first_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_below="@+id/include"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_update_mobile_first_tip"
            android:textColor="@color/color_unselect_bar"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_first_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86136******78"
            android:textColor="@color/title_color"
            android:textSize="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />
        <Button
            android:id="@+id/btn_send_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_login_btn_click"
            android:text="发送验证码"
            android:textColor="@color/white_bar_word_color"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <!--第二步-->
    <LinearLayout
        android:id="@+id/ll_sencond_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:visibility="gone"
        android:layout_below="@+id/include"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_sencond_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信验证码已发送至+86134****5342 请注意查收"
            android:textColor="@color/color_unselect_bar"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext_bg"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_weight="6"
                >
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="验证码"
                    android:textColor="@color/title_color"
                    android:padding="10dp"
                    />

                <EditText
                    android:id="@+id/et_mobile_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:textSize="14sp"
                    android:background="#00000000"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_get_mobile_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_weight="4"
                android:background="@drawable/shape_btn_gray_unclickable"
                android:textColor="@color/white_bar_word_color"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_login_btn_click"
            android:text="下一步"
            android:textColor="@color/white_bar_word_color"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <!--第三步-->
    <LinearLayout
        android:id="@+id/ll_third_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/include"
        >
        <ImageView
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:src="@mipmap/ico_cellphone_3x"
            android:layout_marginTop="72dp"
            />

        <TextView
            android:id="@+id/tv_third_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86136******78"
            android:textColor="@color/title_color"
            android:textSize="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/selector_login_btn_click"
            android:text="更换手机号"
            android:textColor="@color/white_bar_word_color"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <!--第四步-->
    <LinearLayout
        android:id="@+id/ll_fourth_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/include"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成身份验证"
            android:textColor="@color/color_unselect_bar"
            android:textSize="14sp"
            android:layout_margin="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入新手机号码"
            android:textColor="@color/title_color"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edittext_bg"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="手机号"
                android:textColor="@color/title_color"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/et_new_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码"
                android:textSize="14sp"
                android:background="#00000000"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="phone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext_bg"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_weight="6"
                >
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="验证码"
                    android:textColor="@color/title_color"
                    android:padding="10dp"
                    />

                <EditText
                    android:id="@+id/et_new_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:textSize="14sp"
                    android:background="#00000000"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_weight="4"
                android:background="@drawable/shape_btn_gray_unclickable"
                android:textColor="@color/white_bar_word_color"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_blue_unclick"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="23dp"
            android:text="确定更换"
            android:textColor="@color/white_bar_word_color"
            android:textSize="18sp"
            />


    </LinearLayout>


    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/mkloader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:mk_color="#aaa"
        app:mk_type="ClassicSpinner" />

</RelativeLayout>
