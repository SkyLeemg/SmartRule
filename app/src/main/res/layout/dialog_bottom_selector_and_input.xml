<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="45dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/color_unselect_bar"
        android:text="请选择"
        android:textSize="16sp"
        android:background="#FFFFFF"
         />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/word_color"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_input_project_name"
            android:layout_width="@dimen/fixed_max_width"
            android:layout_height="wrap_content"
            android:hint="自定义名称"
            android:layout_marginLeft="15dp"
            android:background="#00000000"
            android:paddingTop="15dp"
            android:textSize="16sp"
            android:textColor="@color/title_color"
            android:paddingBottom="15dp"
            />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textSize="16sp"
            android:textColor="@color/color_word"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/word_color"
        android:layout_marginLeft="15dp"
        />
    <!--<ScrollView-->
        <!--android:id="@+id/sLayout_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->

        <!--&gt;-->
        <!--android:fadingEdge="none"-->

       <ListView
           android:id="@+id/lv_dialog_selector_list"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#FFFFFF"
           ></ListView>
    <!--</ScrollView>-->

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="取消"
        android:textStyle="bold"
        android:textColor="@color/color_word"
        android:textSize="@dimen/text_size" />



</LinearLayout>
