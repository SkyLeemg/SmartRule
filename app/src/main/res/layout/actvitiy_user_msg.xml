<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <include
        android:id="@+id/include"
        layout="@layout/base_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:layout_below="@+id/include"
        android:background="@color/white">

        <!--头像-->
        <RelativeLayout
            android:id="@+id/rl_img_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_mine_item_click"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="16sp"
                android:textColor="@color/title_color"
                android:layout_centerVertical="true"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cir_img_head"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@color/background"
                android:layout_toLeftOf="@+id/img_arrow1"
                android:layout_margin="10dp"

                />

            <ImageView
                android:id="@+id/img_arrow1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ico_arrow_right_2x"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gv_border"
            />

        <!--姓名-->
        <RelativeLayout
            android:id="@+id/rl_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_mine_item_click"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="16sp"
                android:textColor="@color/title_color"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_arrow2"
                android:layout_marginRight="12dp"
                android:text="张三"
                android:textSize="16sp"
                android:textColor="@color/color_unselect_bar"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

            <ImageView
                android:id="@+id/img_arrow2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ico_arrow_right_2x"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gv_border"
            />

        <!--手机号码-->
        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_mine_item_click"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textSize="16sp"
                android:textColor="@color/title_color"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_arrow3"
                android:layout_marginRight="12dp"
                android:text="132******22"
                android:textSize="16sp"
                android:textColor="@color/color_unselect_bar"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

            <ImageView
                android:id="@+id/img_arrow3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ico_arrow_right_2x"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gv_border"
            />

        <!--微信-->
        <RelativeLayout
            android:id="@+id/rl_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_mine_item_click"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textSize="16sp"
                android:textColor="@color/title_color"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_user_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_arrow4"
                android:layout_marginRight="12dp"
                android:text="立即绑定"
                android:textSize="16sp"
                android:textColor="@color/color_unselect_bar"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

            <ImageView
                android:id="@+id/img_arrow4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ico_arrow_right_2x"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </LinearLayout>
    <!--微信-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_mine_item_click"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换账号"
            android:textSize="16sp"
            android:textColor="@color/pink_btn_color"
            android:layout_centerVertical="true"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</RelativeLayout>
