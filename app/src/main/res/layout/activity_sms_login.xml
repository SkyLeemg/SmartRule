<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pblue_bar_color"
            android:text="手机号登录"
            android:textSize="22sp"
            />


        <scut.carson_ho.diy_view.SuperEditText
            android:id="@+id/et_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:layout_marginTop="20dp"
            app:ic_left_unclick="@mipmap/login_mobile"
            app:ic_left_click="@mipmap/login_mobile"
            android:hint="请输入手机号码"
            app:lineColor_unclick="@color/pblue_bar_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            >

            <scut.carson_ho.diy_view.SuperEditText
                android:id="@+id/et_login_mobile_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="请输入手机验证码"
                android:layout_marginTop="15dp"
                android:layout_weight="6"
                app:ic_left_click="@mipmap/login_ecurity_code"
                app:ic_left_unclick="@mipmap/login_ecurity_code"
                app:lineColor_unclick="@color/pblue_bar_color"
                />


            <Button
                android:id="@+id/btn_login_get_mobile_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_weight="4"
                android:background="@drawable/btn_nomal"
                android:textColor="@color/white_bar_word_color"
                android:textSize="14sp"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pwd_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="用密码登录"
            android:textColor="@color/blue_tv_color"
            />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_nomal"
            android:text="登   录"
            android:textColor="@color/white_bar_word_color"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/mkloader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_loading_tip"
        android:layout_centerInParent="true"
        app:mk_type="ClassicSpinner"
        app:mk_color="#aaa"
        android:visibility="gone"
        />

</RelativeLayout>
