<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include"
        layout="@layout/base_toolbar"/>

    <TextView
    android:id="@+id/tv_net_address_tip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="官网地址："
    app:layout_constraintTop_toBottomOf="@+id/include"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="25dp"
    app:layout_constraintLeft_toLeftOf="parent"
    />
    <TextView
        android:id="@+id/tv_net_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://iotapp.vkforest.com"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintLeft_toRightOf="@+id/tv_net_address_tip"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/tv_buy_address_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_net_address_tip"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="商城地址："
        />
    <TextView
        android:id="@+id/tv_buy_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://iotapp.vkforest.com"
        app:layout_constraintTop_toBottomOf="@+id/tv_net_address"
        app:layout_constraintLeft_toRightOf="@+id/tv_buy_address_tip"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_phone_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_buy_address_tip"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="电话："
        />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0769-28827896"
        app:layout_constraintTop_toBottomOf="@+id/tv_buy_address"
        app:layout_constraintLeft_toRightOf="@+id/tv_buy_address_tip"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_email_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_tip"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="邮箱："
        />
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nobu@183.co,"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone"
        app:layout_constraintLeft_toRightOf="@+id/tv_phone_tip"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:text="墨点狗智能科技有限公司"/>

</android.support.constraint.ConstraintLayout>
