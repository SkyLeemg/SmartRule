<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--底部对话框的样式-->
    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--底部对话框的从底部进入的样式-->
    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/tranlate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/tranlate_dialog_out</item>
    </style>


    <style name="tv_click">
        <item name="android:textColor">@color/pblue_bar_color</item>
        <item name="android:state_pressed">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!--个人中心导航栏的样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/pblue_bar_color</item>
        <item name="colorPrimaryDark">@color/pblue_bar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text" >
        <item name="android:textColor">@color/pblue_bar_color</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
